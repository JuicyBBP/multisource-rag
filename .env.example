# ===========================================
# MultiSource RAG System - Configuration
# ===========================================

# LLM API Configuration
# ------------------------------------
# Mistral API (Primary provider)
MISTRAL_API_KEY=your_mistral_api_key_here

# Optional: Other LLM providers (for future use)
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Settings
# ------------------------------------
LLM_PROVIDER=mistral
LLM_MODEL=mistral-small-latest
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1500

# Embeddings Configuration
# ------------------------------------
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cuda  # cuda or cpu
EMBEDDING_BATCH_SIZE=32

# Vector Database (ChromaDB)
# ------------------------------------
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
CHROMA_COLLECTION_NAME=documents_collection

# RAG Pipeline Settings
# ------------------------------------
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
RETRIEVAL_TOP_K=5
SIMILARITY_THRESHOLD=0.7

# Application Settings
# ------------------------------------
APP_NAME=MultiSource RAG System
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# API Settings (FastAPI)
# ------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Frontend Settings (Streamlit)
# ------------------------------------
FRONTEND_PORT=8501

# File Upload Settings
# ------------------------------------
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIRECTORY=./data/uploaded_docs

# Redis (Optional - for caching)
# ------------------------------------
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# Monitoring & Logging
# ------------------------------------
LOG_FILE=./logs/app.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days
